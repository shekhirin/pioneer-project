<h2>New Question</h2>

<%= form_with model: @question do |form| %>
  <div>
    <%= form.text_area :body, rows: 4, cols: 50 %>
    <% @question.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <br>
  <div>
    <%= select_tag(:tags, options_from_collection_for_select(Tag.all, :id, :name), multiple: true) %>
    OR
    <%= form.text_field :manual_tags, value: '', placeholder: 'Enter more tags' %>
    <% @question.errors.full_messages_for(:tags).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>