<h1>New Question</h1>

<%= form_with model: @question do |form| %>
  <div>
    <%= form.label :body %><br>
    <%= form.text_field :body %>
    <% @question.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>